{
	"name": "polyql",
	"version": "0.0.2",
	"description": "A modern GraphQL-Client powered by the Fetch API",
	"main": "./lib/polyql.cjs.js",
	"browser": "./lib/polyql.umd.js",
	"module": "./lib/polyql.es.js",
	"jsnext:main": "./lib/polyql.es.js",
	"types": "./lib/index.d.ts",
	"author": "schulke-214 <schulkemaximilian@gmail.com>",
	"license": "MIT",
	"scripts": {
		"test": "jest",
		"dev": "rollup -c rollup.config.js -w",
		"build": "rollup -c rollup.config.js",
		"build:clean": "yarn clean && yarn build",
		"clean": "rm -rf ./lib",
		"docs:dev": "mdbook serve docs",
		"docs:build": "mdbook build docs",
		"docs:publish": "./scripts/deploy-docs.sh",
		"size": "bundlesize"
	},
	"devDependencies": {
		"@babel/core": "^7.4.5",
		"@babel/preset-env": "^7.4.5",
		"@babel/preset-typescript": "^7.6.0",
		"@types/jest": "^24.0.20",
		"@types/qs": "^6.5.3",
		"bl": "^0.9.5",
		"bundlesize": "^0.18.0",
		"codacy-coverage": "^3.4.0",
		"core-js": "^3.3.4",
		"jest": "^24.8.0",
		"js-yaml": "^3.13.1",
		"rollup": "^1.12.3",
		"rollup-plugin-babel": "^4.3.3",
		"rollup-plugin-commonjs": "^10.1.0",
		"rollup-plugin-node-builtins": "^2.1.2",
		"rollup-plugin-node-resolve": "^5.0.0",
		"rollup-plugin-terser": "^5.1.2",
		"rollup-plugin-typescript2": "^0.24.3",
		"semver": "^4.3.2",
		"ts-jest": "^24.1.0",
		"typescript": "^3.6.4",
		"vuepress": "^0.14.11"
	},
	"dependencies": {
		"cross-fetch": "^3.0.4",
		"qs": "^6.9.1"
	},
	"engines": {
		"node": ">=8.0.0"
	},
	"bundlesize": [
		{
			"path": "./lib/polyql.*.js",
			"maxSize": "8 kB"
		}
	],
	"directories": {
		"lib": "lib",
		"test": "tests",
		"doc": "docs"
	},
	"files": [
		"lib/",
		"types/",
		"bin/"
	],
	"repository": {
		"type": "git",
		"url": "git+https://github.com/schulke-214/polyql.git"
	},
	"homepage": "https://github.com/schulke-214/polyql#readme",
	"bugs": {
		"url": "https://github.com/schulke-214/polyql/issues"
	},
	"keywords": [
		"polyql",
		"graphql",
		"apollo",
		"graphql-client",
		"request",
		"fetch"
	]
}

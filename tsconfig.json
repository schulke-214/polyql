{
	"compilerOptions": {
		"module": "es6",
		"moduleResolution": "node",
		"rootDir": ".",
		"target": "es5",
		"sourceMap": false,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"removeComments": true,
		"esModuleInterop": true,
		"outDir": "lib",
		"declaration": true,
		"declarationDir": "lib",
		"noImplicitAny": true,
		"baseUrl": "./src",
		"paths": {
			"types": ["./pkg/types"],
			"client": ["./pkg/client"],
			"transporter": ["./pkg/transporter"]
		}
	},
	"include": ["src"],
	"exclude": ["node_modules", "lib", "*.test.ts"]
}

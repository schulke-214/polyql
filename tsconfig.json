{
	"compilerOptions": {
		"module": "es6",
		"moduleResolution": "node",
		"rootDir": ".",
		"target": "es5",
		"sourceMap": false,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"removeComments": true,
		"esModuleInterop": true,
		"outDir": "lib",
		"declaration": true,
		"declarationDir": "lib",
		"noImplicitAny": true
		// "lib": ["es2015", "es2016", "dom", "esnext.asynciterable"]
	},
	"include": ["src"],
	"exclude": ["node_modules", "lib", "*.test.ts"]
}
